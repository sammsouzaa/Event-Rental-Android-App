<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue_background"
    tools:context=".fragmentsSettings.settings">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="18dp">

        <ImageView
            android:id="@+id/closebutao"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:tint="#526D82"
            app:srcCompat="@drawable/baseline_arrow_back_ios_24" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:text="@string/settingssettings"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="18dp">

        <Spinner
            android:id="@+id/sppinnerlinguagens"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:layout_marginStart="18dp"
            android:backgroundTint="@color/white"
            android:foregroundTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintVertical_bias="0.049" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blue"
            android:text="@string/location_select"
            android:layout_marginStart="6dp"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.54"
            app:layout_constraintStart_toEndOf="@+id/sppinnerlinguagens"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />


    </LinearLayout>

</LinearLayout>