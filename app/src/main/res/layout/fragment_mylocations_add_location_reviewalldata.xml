<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue_background"
    tools:context=".fragmentsMyLocation.AddLocationReviewAllDataFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="18dp">

            <ImageView
                android:id="@+id/btn_backprevious"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:tint="#526D82"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

            <ImageView
                android:id="@+id/btn_closeToMenu"
                android:layout_marginStart="285dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:tint="#526D82"
                app:srcCompat="@drawable/baseline_close_24" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addmylocationreviewalldata_texto1"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:textSize="26dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addmylocationreviewalldata_texto2"
            android:textStyle="bold"
            android:textColor="#526D82"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="24dp"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/showProperty_TypeHouse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="type here:"
            android:textColor="#526D82"
            android:paddingBottom="20dp"
            android:background="@drawable/editext_background"
            android:layout_marginTop="18dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/edit_propertytype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addmylocationreviewalldata_texto3"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:layout_marginEnd="24dp"
            android:textColor="@color/blue"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp"
            android:textSize="16dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="24dp">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@drawable/bg_edittext_property"
                android:gravity="center"
                android:elevation="20dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/showProperty_PhotoPrincipal"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/addphotopikudo"  />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/bg_edittext_property"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:elevation="5dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/showProperty_Photo1"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/addphotopikudo" />

                    </LinearLayout>

                    <LinearLayout
                        android:elevation="5dp"
                        android:background="@drawable/bg_edittext_property"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/showProperty_Photo3"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/addphotopikudo"  />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:elevation="5dp"
                        android:background="@drawable/bg_edittext_property"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/showProperty_Photo2"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/addphotopikudo"  />

                    </LinearLayout>

                    <LinearLayout
                        android:elevation="5dp"
                        android:background="@drawable/bg_edittext_property"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/showProperty_Photo4"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/addphotopikudo"  />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/edit_photos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addmylocationreviewalldata_texto4"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:layout_marginEnd="32dp"
            android:textColor="@color/blue"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp"
            android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/showProperty_Title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="tittle here"
            android:textStyle="bold"
            android:textColor="#526D82"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/edit_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/addmylocationreviewalldata_texto5"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:textColor="@color/blue"
            android:layout_marginStart="24dp"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/showProperty_Price"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="R$ 11"
            android:textStyle="bold"
            android:textColor="#526D82"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/edit_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addmylocationreviewalldata_texto6"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:textColor="@color/blue"
            android:layout_marginStart="24dp"
            android:textSize="16dp" />

    </LinearLayout>

        <TextView
            android:id="@+id/showProperty_Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="description here"
            android:textColor="#526D82"
            android:layout_marginStart="24dp"
            android:layout_marginTop="18dp"
            android:textSize="19dp" />


        <TextView
            android:id="@+id/edit_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addmylocationreviewalldata_texto7"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:layout_marginEnd="24dp"
            android:textColor="@color/blue"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/edit_additional_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addmylocationreviewalldata_texto8"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_marginStart="24dp"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/showProperty_Size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="500m2"
            android:textColor="#526D82"
            android:paddingBottom="18dp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/showProperty_Capacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="capacity: 200"
            android:textColor="#526D82"
            android:paddingBottom="18dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:orientation="horizontal">

                <TextView
                    android:id="@+id/showProperty_Beds"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="beds: 2"
                    android:textColor="#526D82"
                    android:layout_marginEnd="18dp"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/showProperty_Baths"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="baths: 3"
                    android:textColor="#526D82"
                    android:textSize="18dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/edit_address_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addmylocationreviewalldata_texto9"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"
            android:textSize="16dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/showProperty_Street"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Rua das Pombas"
                android:textColor="#526D82"
                android:layout_marginEnd="18dp"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/showProperty_Number"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="1087"
                android:textColor="#526D82"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/showProperty_Neighborhood"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="neighborhood"
                android:textColor="#526D82"
                android:layout_marginEnd="18dp"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/showProperty_City"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="city"
                android:textColor="#526D82"
                android:textSize="18dp" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_register"
            style="@android:style/Widget.Button"
            android:backgroundTint="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/bg_btn_continue"
            android:text="@string/addmylocationreviewalldata_button"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </LinearLayout>

</ScrollView>