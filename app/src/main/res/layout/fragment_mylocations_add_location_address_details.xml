<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/blue_background"
    tools:context=".fragmentsMyLocation.mylocations_add_location_addressDetails">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="18dp">

        <ImageView
            android:id="@+id/btn_backprevious"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:tint="#526D82"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

        <ImageView
            android:id="@+id/btn_closeToMenu"
            android:layout_marginStart="285dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:tint="#526D82"
            app:srcCompat="@drawable/baseline_close_24" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/addmylocationaddres_texto1"
        android:textColor="@color/black"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:textSize="24dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:paddingBottom="18dp"
                android:text="@string/addmylocationaddres_texto2"
                android:textColor="#526D82"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/propertystreet"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/bg_edittext_property"
                android:hint="ex: Rua das Pombas"
                android:paddingStart="16dp"
                android:textColor="#454545"
                android:textColorHint="#526D82"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:text="@string/addmylocationaddres_texto3"
                android:textColor="#526D82"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/propertynumber"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:textColor="#454545"
                android:textColorHint="#526D82"
                android:layout_marginEnd="24dp"
                android:paddingStart="16dp"
                android:hint="ex: 1940"
                android:inputType="number"
                android:background="@drawable/bg_edittext_property"
                android:textSize="18dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/addmylocationaddres_texto4"
                android:textColor="#526D82"
                android:paddingBottom="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/propertyneighborhood"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:textColor="#454545"
                android:textColorHint="#526D82"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:paddingStart="16dp"
                android:hint="ex: country "
                android:background="@drawable/bg_edittext_property"
                android:textSize="18dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/addmylocationaddres_texto5"
                android:textColor="#526D82"
                android:paddingBottom="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/propertycity"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:textColor="#454545"
                android:textColorHint="#526D82"
                android:layout_marginEnd="24dp"
                android:paddingStart="16dp"
                android:hint="ex: Cascavel"
                android:background="@drawable/bg_edittext_property"
                android:textSize="18dp"/>

        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_continue"
        style="@android:style/Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/bg_btn_continue"
        android:text="@string/addmylocationaddres_button"
        android:textColor="#526D82"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</LinearLayout>