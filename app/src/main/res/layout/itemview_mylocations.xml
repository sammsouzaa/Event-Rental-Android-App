<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_bg"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:elevation="20dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="4dp">

    <ImageView
        android:id="@+id/ID_property_pic"
        android:layout_margin="8dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/loadingimage" />

    <TextView
        android:id="@+id/ID_property_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="2dp"
        android:text="Best house ever"
        android:textColor="#454545"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ID_property_type"
        app:layout_constraintStart_toEndOf="@+id/ID_property_pic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ID_property_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Mansion"
        android:textColor="#454545"
        app:layout_constraintStart_toStartOf="@+id/ID_property_title"
        app:layout_constraintTop_toBottomOf="@+id/ID_property_title" />

    <TextView
        android:id="@+id/ID_property_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Approved"
        android:textColor="#454545"
        app:layout_constraintStart_toStartOf="@+id/ID_property_type"
        app:layout_constraintTop_toBottomOf="@+id/ID_property_type" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="37dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>