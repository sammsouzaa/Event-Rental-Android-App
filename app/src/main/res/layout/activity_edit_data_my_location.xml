<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue_background"
    tools:context=".activities.edit_data_my_location">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="18dp">

            <ImageView
                android:id="@+id/editdata_btn_closeAll"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:tint="#526D82"
                app:srcCompat="@drawable/baseline_close_24" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/editdatamylocations_texto1"
            android:textColor="@color/black"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:textSize="24dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/editdatamylocations_texto2"
            android:textStyle="bold"
            android:textColor="#526D82"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="24dp"
            android:textSize="19dp" />

        <Spinner
            android:id="@+id/editdata_typeofproperty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="12dp"
            android:spinnerStyle="@style/CustomSpinnerDropDownStyle"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/editdatamylocations_texto3"
            android:textStyle="bold"
            android:textColor="#526D82"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="24dp"
            android:textSize="19dp" />

        <EditText
            android:id="@+id/editdata_propertytitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#454545"
            android:textColorHint="#526D82"
            android:layout_marginTop="18dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:paddingStart="16dp"
            android:hint="@string/editdatamylocations_edittext1"
            android:background="@drawable/bg_edittext_property"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/editdatamylocations_texto4"
            android:textStyle="bold"
            android:textColor="#526D82"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="24dp"
            android:textSize="19dp" />

        <EditText
            android:id="@+id/editdata_propertydescription"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:textColor="#454545"
            android:textColorHint="#526D82"
            android:textAlignment="viewStart"
            android:layout_marginTop="19dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingEnd="16dp"
            android:hint="@string/editdatamylocations_edittext2"
            android:background="@drawable/bg_edittext_property"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/editdatamylocations_texto5"
            android:textColor="#526D82"
            android:paddingBottom="18dp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/editdata_propertySize"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#454545"
            android:textColorHint="#526D82"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:paddingStart="16dp"
            android:hint="ex: 500m2"
            android:inputType="numberDecimal"
            android:background="@drawable/bg_edittext_property"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 de 10"
            android:textAlignment="textEnd"
            android:layout_marginEnd="24dp"
            android:textColor="#526D82"
            android:paddingBottom="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/editdatamylocations_texto6"
                    android:textColor="#526D82"
                    android:paddingBottom="18dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="28dp"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/editdata_Price"
                    android:layout_width="155dp"
                    android:layout_height="50dp"
                    android:textColor="#454545"
                    android:textColorHint="#526D82"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="28dp"
                    android:paddingStart="16dp"
                    android:hint="ex: r$200"
                    android:inputType="numberDecimal"
                    android:background="@drawable/bg_edittext_property"
                    android:textSize="18dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/editdatamylocations_texto7"
                    android:textColor="#526D82"
                    android:paddingBottom="18dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="24dp"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/editdata_Capacity"
                    android:layout_width="155dp"
                    android:layout_height="50dp"
                    android:textColor="#454545"
                    android:textColorHint="#526D82"
                    android:layout_marginEnd="24dp"
                    android:paddingStart="16dp"
                    android:hint="ex: 200"
                    android:inputType="number"
                    android:background="@drawable/bg_edittext_property"
                    android:textSize="18dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/editdatamylocations_texto8"
                    android:textColor="#526D82"
                    android:paddingBottom="18dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/editdata_Beds"
                    android:layout_width="155dp"
                    android:layout_height="50dp"
                    android:textColor="#454545"
                    android:textColorHint="#526D82"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="28dp"
                    android:paddingStart="16dp"
                    android:hint="ex: 2"
                    android:inputType="number"
                    android:background="@drawable/bg_edittext_property"
                    android:textSize="18dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/editdatamylocations_texto9"
                    android:textColor="#526D82"
                    android:paddingBottom="18dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="24dp"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/editdata_Baths"
                    android:layout_width="155dp"
                    android:layout_height="50dp"
                    android:textColor="#454545"
                    android:textColorHint="#526D82"
                    android:layout_marginEnd="24dp"
                    android:paddingStart="16dp"
                    android:hint="ex: 3"
                    android:inputType="number"
                    android:background="@drawable/bg_edittext_property"
                    android:textSize="18dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="24dp"
                    android:paddingBottom="18dp"
                    android:text="@string/editdatamylocations_texto10"
                    android:textColor="#526D82"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/editdata_street"
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/bg_edittext_property"
                    android:hint="ex: Rua das Pombas"
                    android:paddingStart="16dp"
                    android:textColor="#454545"
                    android:textColorHint="#526D82"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="18dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="24dp"
                    android:text="@string/editdatamylocations_texto11"
                    android:textColor="#526D82"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/editdata_number"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:textColor="#454545"
                    android:textColorHint="#526D82"
                    android:layout_marginEnd="24dp"
                    android:paddingStart="16dp"
                    android:hint="ex: 1940"
                    android:inputType="number"
                    android:background="@drawable/bg_edittext_property"
                    android:textSize="18dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/editdatamylocations_texto12"
                    android:textColor="#526D82"
                    android:paddingBottom="18dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/editdata_neighborhood"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:textColor="#454545"
                    android:textColorHint="#526D82"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:paddingStart="16dp"
                    android:hint="ex: country"
                    android:background="@drawable/bg_edittext_property"
                    android:textSize="18dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/editdatamylocations_texto13"
                    android:textColor="#526D82"
                    android:paddingBottom="18dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="24dp"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/editdata_city"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:textColor="#454545"
                    android:textColorHint="#526D82"
                    android:layout_marginEnd="24dp"
                    android:paddingStart="16dp"
                    android:hint="ex: Cascavel"
                    android:background="@drawable/bg_edittext_property"
                    android:textSize="18dp"/>

            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/editdata_btn_continue"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/bg_btn_continue"
            android:text="@string/editdatamylocations_button"
            android:textColor="#526D82"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>
</ScrollView>